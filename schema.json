{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Methodology Taxonomy",
  "description": "A Taxonomy of methodologies with suggested steps and items to follow",
  "definitions": {
    "metadata": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "pattern": "^[ a-zA-Z0-9\\-+()\/,.<&:]*$"
        },
        "description": {
          "type": "string"
        },
        "release_date": {
          "type": "string",
          "format": "date-time"
        },
        "vrt_version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+(\\.\\d+)?$",
          "minLength": 3
        }
      },
      "required": [
        "title",
        "description",
        "release_date"
      ]
    },
    "item": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string",
          "pattern": "^[a-z0-9_]*$",
          "minLength": 3
        },
        "title": {
          "type": "string",
          "pattern": "^[ a-zA-Z0-9\\-+()\/,.<\\?&:]*$",
          "minLength": 3
        },
        "caption": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "tools": {
          "type": "string"
        },
        "vrt_category": {
          "type": "string",
          "pattern": "^[a-z_]*$"
        }
      },
      "required": [
        "key",
        "title",
        "caption"
      ]
    },
    "step": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string",
          "pattern": "^[a-z_]*$",
          "minLength": 3
        },
        "title": {
          "type": "string",
          "pattern": "^[ a-zA-Z0-9\\-+()\/,.<&:]*$",
          "minLength": 3
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["checklist", "large_upload", "executive_summary"]
        },
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/item"
          }
        }
      },
      "required": [
        "key",
        "title",
        "description",
        "type"
      ]
    }
  },
  "type": "object",
  "required": [
    "metadata",
    "content"
  ],
  "properties": {
    "metadata": {
      "$ref": "#/definitions/metadata"
    },
    "content": {
      "type": "object",
      "properties": {
        "steps": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/step"
          }
        }
      },
      "required": [
        "steps"
      ]
    }
  }
}